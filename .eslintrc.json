{
    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        },
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2,
            {
                "SwitchCase": 1
            }
        ],
        "semi": "error",
        "quotes": "error",
        "prefer-destructuring": "warn",
        "import/prefer-default-export": "off",
        "implicit-arrow-linebreak": "error",
        "function-paren-newline": "error",
        "comma-dangle": "error",
        "consistent-return": "error",
        "no-unused-vars": "warn"
    },
    "env": {
        "browser": true
    }
}